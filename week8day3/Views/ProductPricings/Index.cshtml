@model IEnumerable<week8day3.Models.ProductPricing>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Pname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PidNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Pname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PidNavigation.Pid)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Billingno">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Billingno">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Billingno">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
